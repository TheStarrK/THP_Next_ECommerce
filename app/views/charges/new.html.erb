<main class="main">
  <div class="container h-100">
    <div class="background-the"></div>
    <div class="row h-100 mt-5 pt-5">
      <div class="col-sm-10 col-md-8 col-lg-6 mx-auto d-table h-100">
        <div class="d-table-cell align-middle">
          <div class="text-center mt-4">
            <h3 class="lead">
              <strong>Validez votre achat ci dessous</strong>
            </h3>
          </div>

          <div class="card">
            <div class="card-body">
              <div class="m-sm-4">
                <%= form_tag charges_path do %>
                <article class="text-center">
                  <% if flash[:error].present? %>
                    <div id="error_explanation">
                      <p><%= flash[:error] %></p>
                    </div>
                  <% end %>
                  <label class="amount">
                    <span>Montant: <%= number_to_currency @order.total, unit: 'â‚¬', separator: ',', format: '%n%u' %></span>
                  </label>
                </article>

                <div class="text-center">
                  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                        data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                        data-description="Ruby-T shop"
                        data-amount="<%=@order.total * 100 %>"
                        data-locale="auto">
                  </script>
                </div>
              <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>