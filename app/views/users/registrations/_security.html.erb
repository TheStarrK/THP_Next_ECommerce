<div class="container container-infos">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

    <p class= "text-center">
      Vous pouvez mettre à jour votre email ci dessous (votre mot de passe sera nécessaire) :
    </p>

    <div class="row">
      <div class="col">
        <%= f.label :email %><br />
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </div>

    <div class="change-mdp">
      <p class= "text-center"><strong>Changer votre mot de passe</strong></p>
    </div>

    <div class="row">
      <div class="col">
        <%= f.label :current_password, 'Mot de passe actuel :' %>
        <%= f.password_field :current_password, placeholder: "Mot de passe" %>
      </div>
      <div class="col">
        <%= f.label :password, 'Nouveau mot de passe :' %>
        <%= f.password_field :password, placeholder: "Mot de passe" %>
      </div>
      <div class="col">
        <%= f.label :password_confirmation, 'Confirmer votre nouveau mot de passe :' %><br />
        <%= f.password_field :password_confirmation, placeholder: "Mot de passe" %>
      </div>
    </div>
    <div class="bouton space-btn">
      <%= f.submit "Update", class: "btn-blue w-100" %>
    </div>
  <% end %>

  <div class="change-mdp">
    <p class= "text-center"><strong> Supprimer mon compte</strong></p>
  </div>
  <p class="text-center">Attention, cette action est irréversible</p>
  <div class="bouton space-btn">
    <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn-blue w-100"  %>
  </div>
</div>
